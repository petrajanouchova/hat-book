\startenvironment env_dis
\mainlanguage[cs]
\enableregime[latin2]
\enableregime[utf]
\setupcolors[state=start] 
\setupinteraction[state=start, color=blue, contrastcolor=blue, style={\tf}]

\setuppapersize[A4][A4]
\setuplayout[location=singlesided, topspace=25mm, backspace=35mm, rightmargin=15mm, bottomspace=20mm, header=24pt, footer=24pt, width=fit, height=fit]

\setupbodyfont[gentium,12pt]
\setupwhitespace[none]

\setuppagenumbering[alternative=singlesided, location={footer,inmargin}]

\setupinterlinespace[big] %spacing 1.5
%\setuplocalinterlinespace[line=2.8ex] spacing 1 \setupinterlinespace[line=4.2ex]

​\setupfootnotedefinition[headstyle=italic, location=singlesided, 9pt, line=2.8ex]
\startsetups[footnote:interlinespace]
  \setupinterlinespace[small]
\stopsetups
​
\setupnote[footnote][setups=footnote:interlinespace]

\setuphead[chapter]      [style=\tfd]
\setuphead[section]      [style=\tfc]
\setuphead[subsection]   [style=\tfb]
\setuphead[subsubsection][style=\tfa]

\setuphead[chapter, section, subsection, subsubsection][incrementnumber=yes,number=yes,align={flushleft}]

\definedescription[description][headstyle=bold, style=normal, location=hanging, width=broad, margin=1cm]

\setupitemize[autointro]    % prevent orphan list intro
\setupitemize[indentnext=no]

\setupalign[hyphenated]
\setupindenting[yes,medium,first]
\setupitemize[indentnext=no]

\setupfloat[figure][default={here,number}]
\setupfloat[table][default={here,number}]

\setupcaption[table][location=bottom,align=middle]
\setupcaptions[style={\tfx},align=middle,location=bottom]

\setupexternalfigures[location=default]

\setupTABLE[c][each][align=flushleft,style={\tfx}]
\setupTABLE[r][1][background=color,backgroundcolor=gray,style={\tfx\bf}]
\setupTABLE[align=middle]

\setupregister[n=4,interaction=pagenumber,indicator=no, compress=yes]


\stopenvironment
